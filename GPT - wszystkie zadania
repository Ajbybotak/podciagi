//zad 1
#include <iostream>
using namespace std;

int main() {
    int T[] = {1, 3, 2, 3, 4, 1, 5, 6, 2, 3, 4};
    int n = 11;  // Liczba elementów w tablicy T
    int maks_dl = 1;
    int akt_dlu = 1;

    for (int i = 1; i < n; ++i) {
        if (T[i] >= T[i - 1]) {
            akt_dlu++;
        } else {
            maks_dl = max(maks_dl, akt_dlu);
            akt_dlu = 1;
        }
    }

    maks_dl = max(maks_dl, akt_dlu);

    cout << "Długość najdłuższego spójnego podciągu niemalejącego: " << maks_dl << endl;

    return 0;
}

//zad 2
#include <iostream>
using namespace std;

int main() {
    int T[] = {1, -2, 3, 4, -1, 2, 1, -5, 4};
    int n = 9;  // Liczba elementów w tablicy T
    int maks_dl = T[0];
    int akt_dlu = T[0];

    for (int i = 1; i < n; ++i) {
        akt_dlu = max(T[i], akt_dlu + T[i]);
        maks_dl = max(maks_dl, akt_dlu);
    }

    cout << "Maksymalna suma podciągu spójnego: " << maks_dl << endl;

    return 0;
}

//zad 3
#include <iostream>

using namespace std;

void znajdzNajdluzszePodciagiRosnace(int tablica[], int n) {
    int maks_dl = 1;
    int liczbaPodciagow = 0;
    int podciagi[100][100];
    int dlugoscPodciagu[100];
    int aktualnyPodciag[100];
    int aktualnyIndex = 0;

    for (int i = 0; i < n; ++i) {
        if (i == 0 || tablica[i] > tablica[i - 1]) {
            aktualnyPodciag[aktualnyIndex++] = tablica[i];
        } else {
            if (aktualnyIndex > maks_dl) {
                maks_dl = aktualnyIndex;
                liczbaPodciagow = 1;
                for (int j = 0; j < maks_dl; ++j) {
                    podciagi[0][j] = aktualnyPodciag[j];
                }
                dlugoscPodciagu[0] = maks_dl;
            } else if (aktualnyIndex == maks_dl) {
                for (int j = 0; j < maks_dl; ++j) {
                    podciagi[liczbaPodciagow][j] = aktualnyPodciag[j];
                }
                dlugoscPodciagu[liczbaPodciagow] = maks_dl;
                liczbaPodciagow++;
            }
            aktualnyIndex = 1;
            aktualnyPodciag[0] = tablica[i];
        }
    }

    if (aktualnyIndex > maks_dl) {
        maks_dl = aktualnyIndex;
        liczbaPodciagow = 1;
        for (int j = 0; j < maks_dl; ++j) {
            podciagi[0][j] = aktualnyPodciag[j];
        }
        dlugoscPodciagu[0] = maks_dl;
    } else if (aktualnyIndex == maks_dl) {
        for (int j = 0; j < maks_dl; ++j) {
            podciagi[liczbaPodciagow][j] = aktualnyPodciag[j];
        }
        dlugoscPodciagu[liczbaPodciagow] = maks_dl;
        liczbaPodciagow++;
    }

    if (liczbaPodciagow == 0) {
        cout << "Brak podciągów rosnących." << endl;
    } else {
        for (int i = 0; i < liczbaPodciagow; ++i) {
            for (int j = 0; j < dlugoscPodciagu[i]; ++j) {
                cout << podciagi[i][j] << " ";
            }
            cout << endl;
        }
    }
}

int main() {
    int n;

    cout << "Podaj liczbe elementow w ciagu: ";
    cin >> n;

    int tablica[n];

    cout << "Podaj elementy ciagu: ";
    for (int i = 0; i < n; ++i) {
        cin >> tablica[i];
    }

    znajdzNajdluzszePodciagiRosnace(tablica, n);

    return 0;
}

//zad 4
#include <iostream>
#include <cstdlib>
#include <ctime>
#include <climits>

using namespace std;

void losujTablice(int tablica[], int n) {
    srand(time(0));

    for (int i = 0; i < n; ++i) {
        tablica[i] = rand() % 201 - 100;
    }
}

void znajdzNajdluzszyPodciag(int tablica[], int n) {
    int maks_dl = 0, akt_dl = 0, start = -1, koniec = -1;
    int temp_start = 0;

    for (int i = 0; i < n; ++i) {
        if (tablica[i] > 0) {
            if (akt_dl == 0) {
                temp_start = i;
            }
            akt_dl++;
        } else {
            if (akt_dl > maks_dl) {
                maks_dl = akt_dl;
                start = temp_start;
                koniec = i - 1;
            }
            akt_dl = 0;
        }
    }

    if (akt_dl > maks_dl) {
        maks_dl = akt_dl;
        start = temp_start;
        koniec = n - 1;
    }

    if (maks_dl > 0) {
        cout << "Najdłuższy spójny podciąg liczb dodatnich: ";
        for (int i = start; i <= koniec; ++i) {
            cout << tablica[i] << " ";
        }
        cout << endl;
    } else {
        cout << "Brak liczb dodatnich w ciągu." << endl;
    }
}

int main() {
    int n;

    cout << "Podaj liczbe elementow w ciagu: ";
    cin >> n;

    int tablica[n];

    losujTablice(tablica, n);

    cout << "Wylosowany ciag liczb: ";
    for (int i = 0; i < n; ++i) {
        cout << tablica[i] << " ";
    }
    cout << endl;

    znajdzNajdluzszyPodciag(tablica, n);

    return 0;
}

//zad 5
#include <iostream>
#include <vector>

using namespace std;

void znajdzPodciagiOSumie(int tablica[], int n, int suma) {
    bool znaleziono = false;

    for (int i = 0; i < n; ++i) {
        int sum = 0;
        for (int j = i; j < n; ++j) {
            sum += tablica[j];
            if (sum == suma) {
                cout << "Podciąg o sumie " << suma << ": ";
                for (int k = i; k <= j; ++k) {
                    cout << tablica[k] << " ";
                }
                cout << endl;
                znaleziono = true;
            }
        }
    }

    if (!znaleziono) {
        cout << "Brak podciągów o zadanej sumie." << endl;
    }
}

int main() {
    int n, suma;

    cout << "Podaj liczbe elementow w ciagu: ";
    cin >> n;

    int tablica[n];

    cout << "Podaj elementy ciagu: ";
    for (int i = 0; i < n; ++i) {
        cin >> tablica[i];
    }

    cout << "Podaj szukaną sumę: ";
    cin >> suma;

    znajdzPodciagiOSumie(tablica, n, suma);

    return 0;
}

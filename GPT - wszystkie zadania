//zad 1
#include <iostream>
using namespace std;

int main() {
    int T[] = {1, 3, 2, 3, 4, 1, 5, 6, 2, 3, 4};
    int n = 11;  // Liczba elementów w tablicy T
    int maks_dl = 1;
    int akt_dlu = 1;

    for (int i = 1; i < n; ++i) {
        if (T[i] >= T[i - 1]) {
            akt_dlu++;
        } else {
            maks_dl = max(maks_dl, akt_dlu);
            akt_dlu = 1;
        }
    }

    maks_dl = max(maks_dl, akt_dlu);

    cout << "Długość najdłuższego spójnego podciągu niemalejącego: " << maks_dl << endl;

    return 0;
}

//zad 2
#include <iostream>
using namespace std;

int main() {
    int T[] = {1, -2, 3, 4, -1, 2, 1, -5, 4};
    int n = 9;  // Liczba elementów w tablicy T
    int maks_dl = T[0];
    int akt_dlu = T[0];

    for (int i = 1; i < n; ++i) {
        akt_dlu = max(T[i], akt_dlu + T[i]);
        maks_dl = max(maks_dl, akt_dlu);
    }

    cout << "Maksymalna suma podciągu spójnego: " << maks_dl << endl;

    return 0;
}

//zad 3
#include <iostream>

using namespace std;

void znajdzNajdluzszePodciagiRosnace(int tablica[], int n) {
    int maks_dl = 1;
    int liczbaPodciagow = 0;
    int podciagi[100][100];
    int dlugoscPodciagu[100];
    int aktualnyPodciag[100];
    int aktualnyIndex = 0;

    for (int i = 0; i < n; ++i) {
        if (i == 0 || tablica[i] > tablica[i - 1]) {
            aktualnyPodciag[aktualnyIndex++] = tablica[i];
        } else {
            if (aktualnyIndex > maks_dl) {
                maks_dl = aktualnyIndex;
                liczbaPodciagow = 1;
                for (int j = 0; j < maks_dl; ++j) {
                    podciagi[0][j] = aktualnyPodciag[j];
                }
                dlugoscPodciagu[0] = maks_dl;
            } else if (aktualnyIndex == maks_dl) {
                for (int j = 0; j < maks_dl; ++j) {
                    podciagi[liczbaPodciagow][j] = aktualnyPodciag[j];
                }
                dlugoscPodciagu[liczbaPodciagow] = maks_dl;
                liczbaPodciagow++;
            }
            aktualnyIndex = 1;
            aktualnyPodciag[0] = tablica[i];
        }
    }

    if (aktualnyIndex > maks_dl) {
        maks_dl = aktualnyIndex;
        liczbaPodciagow = 1;
        for (int j = 0; j < maks_dl; ++j) {
            podciagi[0][j] = aktualnyPodciag[j];
        }
        dlugoscPodciagu[0] = maks_dl;
    } else if (aktualnyIndex == maks_dl) {
        for (int j = 0; j < maks_dl; ++j) {
            podciagi[liczbaPodciagow][j] = aktualnyPodciag[j];
        }
        dlugoscPodciagu[liczbaPodciagow] = maks_dl;
        liczbaPodciagow++;
    }

    if (liczbaPodciagow == 0) {
        cout << "Brak podciągów rosnących." << endl;
    } else {
        for (int i = 0; i < liczbaPodciagow; ++i) {
            for (int j = 0; j < dlugoscPodciagu[i]; ++j) {
                cout << podciagi[i][j] << " ";
            }
            cout << endl;
        }
    }
}

int main() {
    int n;

    cout << "Podaj liczbe elementow w ciagu: ";
    cin >> n;

    int tablica[n];

    cout << "Podaj elementy ciagu: ";
    for (int i = 0; i < n; ++i) {
        cin >> tablica[i];
    }

    znajdzNajdluzszePodciagiRosnace(tablica, n);

    return 0;
}

//zad 4

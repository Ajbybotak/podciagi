//Dlugosc najdluzszego spojnego podciagu niemalejacego
int DNSPNM(int A[])
{
    int maks_dl=1, akt_dl=1, i;
    for(i=1; i<N; i++)
    {
        if(A[i] >= A[i-1])
        {
            akt_dl++;
            if(akt_dl > maks_dl) maks_dl = akt_dl;
        }
        else akt_dl = 1;
    }
    return maks_dl;
}
